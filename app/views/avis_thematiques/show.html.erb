<% provide(:title, "#{@avis_thematique.thematique.titre} selon #{@parti.nom}") %>
<div class="custom-wrapper avis_thematique">

  <div>
    <% if @avis_thematique.thematique.photo.attached? %>
      <%= cl_image_tag @avis_thematique.thematique.photo.key, size: "180x180", crop: "pad", gravity: "center" %>
    <% end %>
    <h1><%= @avis_thematique.thematique.titre %></h1>
  </div>

  <% if !@avis_thematique.rich_opinion_majoritaire.blank? %>
    <p><%= @avis_thematique.rich_opinion_majoritaire %></p>
  <% else %>
    <p>Pas de remarques Ã  ce sujet.</p>
  <% end %>

  <p><%= @avis_thematique.rich_divergences %></p>

  <%# unless @avis_thematique.rich_liens.length == 0 %>
      <p><%= @avis_thematique.rich_liens %></p>
  <%# end %>

  <div class="grid-avis-sous-thematiques">
    <% @avis_sous_thematiques.each do |avis| %>
      <% if avis.rich_avis.body.to_s.length != 37 %>
        <div class="avis-sous-thematiques">
          <h2><%= avis.sous_thematique.titre %></h2>
          <%= avis.rich_avis %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
