<% provide(:title, @parti.nom) %>

<% if @parti.photo.attached? %>
  <div class="text-center">
    <%= cl_image_tag @parti.photo.key, width: "290" %>
  </div>
<% end %>

<div class="line-space"></div>

<div class="parti-nom">
  <h2><%= @parti.nom %></h2>
</div>

<div class="line-space"></div>
<p class="parti-description">
  <%= @parti.rich_description %>
</p>

<div class="line-space"></div>

<h3 class="text-center">Consultez l'avis du parti par rapport aux th√©matiques suivantes :</h3>
<div class="vertical-cards">
  <% @avis_thematiques.each do |avis_thematique| %>
    <%= link_to avis_thematique_path(avis_thematique), class: "political-card" do %>
        <div class="card-image">
          <% if avis_thematique.thematique.photo.attached? %>
            <%= cl_image_tag avis_thematique.thematique.photo.key, class: "zoom", size: "200x200", crop: "pad", gravity: "center" %>
          <% end %>
        </div>
        <div class="card-information">
          <h5><%= avis_thematique.thematique.titre %></h5>
        </div>
    <% end %>
  <% end %>
</div>
